<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="AzureSearcherWorkerRole" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WorkerRole name="WebSearcherWorkerRole" vmsize="Standard_A1_v2">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="SharedStorage" />
    </ConfigurationSettings>
    <Runtime executionContext="elevated" />
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Startup>
      <!-- Counter creating by c# don t have enouth right even with Runtime executionContext=elevated -->
      <Task commandLine="PerfCounter.cmd" executionContext="elevated" />
    </Startup>
  </WorkerRole>
  <WorkerRole name="WebSearcherManagerRole" vmsize="Standard_A1_v2">
    <ConfigurationSettings>
      <Setting name="Microsoft.WindowsAzure.Plugins.Diagnostics.ConnectionString" />
      <Setting name="SharedStorage" />
    </ConfigurationSettings>
    <Runtime executionContext="elevated" />
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Startup>
      <!-- Counter creating by c# don t have enouth right even with Runtime executionContext=elevated -->
      <Task commandLine="PerfCounter.cmd" executionContext="elevated" />
    </Startup>
  </WorkerRole>
</ServiceDefinition>