<?xml version="1.0" encoding="utf-8"?>

<!-- For more information on using web.config transformation visit https://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    <customErrors xdt:Transform="Replace" mode="On" defaultRedirect="~/error.htm" redirectMode="ResponseRewrite">
      <error statusCode="401" redirect="~/error400.htm" />
      <error statusCode="403" redirect="~/error400.htm" />
      <error statusCode="404" redirect="~/error400.htm" />
      <error statusCode="405" redirect="~/error400.htm" />
      <error statusCode="406" redirect="~/error400.htm" />
      <error statusCode="412" redirect="~/error400.htm" />
      <error statusCode="500" redirect="~/error500.htm" />
      <error statusCode="501" redirect="~/error500.htm" />
      <error statusCode="502" redirect="~/error500.htm" />
    </customErrors>
  </system.web>

  <system.webServer>
    <httpErrors errorMode="Custom" xdt:Transform="Replace" defaultPath="~/error.htm" defaultResponseMode="File">
      <clear />
      <error statusCode="403" prefixLanguageFilePath="" path="~/error400.htm" responseMode="File" />
      <error statusCode="404" prefixLanguageFilePath="" path="~/error400.htm" responseMode="File" />
      <error statusCode="405" prefixLanguageFilePath="" path="~/error400.htm" responseMode="File" />
      <error statusCode="406" prefixLanguageFilePath="" path="~/error400.htm" responseMode="File" />
      <error statusCode="412" prefixLanguageFilePath="" path="~/error400.htm" responseMode="File" />
      <error statusCode="500" prefixLanguageFilePath="" path="~/error500.htm" responseMode="File" />
      <error statusCode="501" prefixLanguageFilePath="" path="~/error500.htm" responseMode="File" />
      <error statusCode="502" prefixLanguageFilePath="" path="~/error500.htm" responseMode="File" />
    </httpErrors>
  </system.webServer>

</configuration>